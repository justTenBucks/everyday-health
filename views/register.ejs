    <title>회원가입</title>

  </head>
  <body>
    <% if(user=="guest"||user==""){ %>
      <%- include('nav1.html') %>
    <% } else{ %>  
        <%- include('nav2.html') %>
    <% } %>

    <!-- Optional JavaScript; choose one of the two! -->
    <div class="container-fluid container-height">
      <div class="row align-items-center h-100" style="background-color: violet;">
        <div class="col">
        </div>
        <div class="col" style="background-color:yellow">
          <form  action="/register" method="POST" onsubmit = "return checkz();">
            <div class="form-group mb-3 my-2">
              <label class="form-label">아이디</label>
                <!-- <button type="input" class="btn btn-primary" id="confirm_id">중복검사</button> -->
                <input type="input" class="form-control" name="id" id="id">
                
            </div>
            <div class="form-group mb-3">
              <label class="form-label">비밀번호</label>
              <input type="password" class="form-control" name="pw" id="pw">
            </div>
            <div class="form-group mb-3">
              <label class="form-label">비밀번호 확인</label>
              <input type="password" class="form-control" name="pwd_confirm" id="pwd_confirm">
            </div>
            <div class="form-group mb-3">
                <label class="form-label">비밀번호 찾기 질문</label>
                <input type="input" class="form-control" name="pw_Q" id="pw_Q">
              </div>
              <div class="form-group mb-3">
                <label class="form-label">비밀번호 찾기 답</label>
                <input type="input" class="form-control" name="pw_A" id="pw_A">
              </div>
            <button type="submit" class="btn btn-primary rounded my-3 mx-3">회원가입</button>
          </form>
        </div>
        <div class="col"></div>
      </div>
    </div>
    <script>
      
      function checkz() {
        var getCheck= RegExp(/^[a-zA-Z0-9]{4,15}$/);
        var getPwdCheck= RegExp(/^[a-zA-Z0-9]{6,20}$/);
        var getKorCheck= RegExp(/[가-힣]{4,8}/);
        var getNumberCheck= RegExp(/[Z0-9]{1,8}/);

        //아이디 공백 확인
        if($("#id").val() == ""){
          alert("아이디 입력바람");
          $("#id").focus();
          return false;
        }
   
        //이름의 유효성 검사
        if(!getKorCheck.test($("#id").val()) || !getNumberCheck.test($("#id").val())){
          alert("아이디는 한글 4~8글자와 숫자를 포함하여 만들어주세요");
          $("#id").val("");
          $("#id").focus();
          return false;
        }

        //비밀번호 공백 확인
        if($("#pw").val() == ""){
          alert("비밀번호를 입력해주세요");
          $("#pw").focus();
          return false;
        }
   
        //비밀번호 질문 공백 확인
        if($("#pw_Q").val() == ""){
          alert("비밀번호를 입력해주세요");
          $("#pw_Q").focus();
          return false;
        }

        //비밀번호 답변 공백 확인
        if($("#pw_A").val() == ""){
          alert("비밀번호를 입력해주세요");
          $("#pw_A").focus();
          return false;
        }

        //비밀번호
        if(!getPwdCheck.test($("#pwd").val())) {
          alert("비밀번호는 6글자 이상으로 만들어주세요");
          $("#pw").val("");
          $("#pw").focus();
          return false;
        }
   
        //아이디랑 비밀번호랑 같은지
        if ($("#id").val()==($("#pw").val())) {
          alert("비밀번호가 ID와 똑같으면 안됩니다!");
          $("#pw").val("");
          $("#pw").focus();
          return false;
      }
   
        //비밀번호 똑같은지
        if($("#pw").val() != ($("#pwd_confirm").val())){ 
          alert("비밀번호 확인이 틀렸습니다..");
          $("#pw").val("");
          $("#pwd_confirm").val("");
          $("#pw").focus();
         return false;
       }

       alert("아이디가 생성되었습니다.")
       return true;
    }

    </script>
